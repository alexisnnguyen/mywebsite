        <script>
            var menuList = document.getElementById("nav-items");
            menuList.style.right = "-100%";

            function togglemenu() {
                if (menuList.style.right == "-20px") {
                    menuList.style.right = "-100%";
                }
                else {
                    menuList.style.right = "-20px";
                }
            }
        </script>

